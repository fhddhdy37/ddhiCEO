<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/store_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="가게 이름"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/store_address_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="주소"
        app:layout_constraintTop_toBottomOf="@id/store_name_input"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/store_hours_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="운영 시간"
        app:layout_constraintTop_toBottomOf="@id/store_address_input"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/store_phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="가게 전화번호"
        app:layout_constraintTop_toBottomOf="@id/store_hours_input"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/store_siru_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="시루 가맹점"
        app:layout_constraintTop_toBottomOf="@id/store_phone_input"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/store_tags_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="태그"
        app:layout_constraintTop_toBottomOf="@id/store_siru_input"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/store_image_input"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/store_tags_input" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록"
        app:layout_constraintTop_toBottomOf="@id/store_image_input"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>